<script>
    document.getElementById("btnAddFile").addEventListener("click", function () {
        const container = document.getElementById("fileContainer");

        const wrapper = document.createElement("div");
        wrapper.className = "input-group";

        wrapper.innerHTML = `
            <input type="file"
                   name="Files"
                   class="form-control"
                   accept=".pdf,.jpg,.jpeg,.png"
                   required />
            <button type="button" class="btn btn-outline-danger btn-remove">
                ✖
            </button>
        `;

        container.appendChild(wrapper);
    });

    document.addEventListener("click", function (e) {
        if (e.target.classList.contains("btn-remove")) {
            e.target.closest(".input-group").remove();
        }
    });
</script>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
    var map = L.map('map').setView([15.37768, 108.793321], 16); // Dung Quat

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap'
    }).addTo(map);

    var marker = null;

    map.on('click', function (e) {
        var lat = e.latlng.lat;
        var lng = e.latlng.lng;

        document.getElementById("Latitude").value = lat;
        document.getElementById("Longitude").value = lng;

        if (marker) {
            marker.setLatLng(e.latlng);
        } else {
            marker = L.marker(e.latlng).addTo(map);
        }
    });
</script>
<script>
    const modeMap = document.getElementById("modeMap");
    const modeManual = document.getElementById("modeManual");

    const mapContainer = document.getElementById("mapContainer");
    const manualContainer = document.getElementById("manualContainer");

    const latHidden = document.getElementById("Latitude");
    const lngHidden = document.getElementById("Longitude");

    const latManual = document.getElementById("ManualLatitude");
    const lngManual = document.getElementById("ManualLongitude");

    modeMap.addEventListener("change", function () {
        if (this.checked) {
            mapContainer.classList.remove("d-none");
            manualContainer.classList.add("d-none");

            latManual.value = "";
            lngManual.value = "";
        }
    });

    modeManual.addEventListener("change", function () {
        if (this.checked) {
            mapContainer.classList.add("d-none");
            manualContainer.classList.remove("d-none");

            latHidden.value = "";
            lngHidden.value = "";

            if (marker) {
                map.removeLayer(marker);
                marker = null;
            }
        }
    });

    // Sync manual input → hidden field
    function syncManual() {
        latHidden.value = latManual.value;
        lngHidden.value = lngManual.value;
    }

    latManual.addEventListener("input", syncManual);
    lngManual.addEventListener("input", syncManual);
</script>
